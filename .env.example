# QuickBooks OAuth Credentials (REQUIRED)
# Get these from: https://developer.intuit.com/
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here
QUICKBOOKS_REDIRECT_URI=https://your-server.com/oauth/callback
QUICKBOOKS_ENVIRONMENT=sandbox

# Claude Desktop OAuth
# Note: Users provide OAuth credentials when adding the custom connector in Claude Desktop
# No CLAUDE_CLIENT_ID needed - users enter YOUR QuickBooks credentials in Claude
CLAUDE_REDIRECT_URI=https://claude.ai/api/mcp/auth_callback

# Server Configuration
PORT=8080
AUTH_MODE=claude-desktop
TRANSPORT=http

# Storage Paths (optional, defaults shown)
MCP_TOKEN_STORAGE_PATH=./data/mcp-tokens.json
QB_SESSION_STORAGE_PATH=./data/qb-sessions.json
